<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graphic"
    app:startDestination="@+id/navigation_popular">

<!--Fragment Popular-->
    <fragment
        android:id="@+id/navigation_popular"
        android:name="com.app.moviester.ui.fragment.PopularFragment"
        android:label="@string/title_popular"
        tools:layout="@layout/fragment_popular">
        <action
            android:id="@+id/action_navigation_popular_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <!--Fragment TopRate-->
    <fragment
        android:id="@+id/navigation_top_rate"
        android:name="com.app.moviester.ui.fragment.TopRateFragment"
        android:label="@string/title_topRate"
        tools:layout="@layout/fragment_top_rate">
        <action
            android:id="@+id/action_navigation_top_rate_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

    <!--Fragment Mylist-->
    <fragment
        android:id="@+id/navigation_my_list"
        android:name="com.app.moviester.ui.fragment.MyListFragment"
        android:label="@string/title_mylist"
        tools:layout="@layout/fragment_my_list">
    </fragment>

    <!--Fragment Movie Details-->
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.app.moviester.ui.fragment.MovieDetailsFragment"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movie"
            app:argType="com.app.moviester.internet.model.Movie" />
    </fragment>

    <!--Fragment Search-->
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.app.moviester.ui.fragment.SearchFragment"
        android:label="@string/search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_navigation_search_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>

</navigation>