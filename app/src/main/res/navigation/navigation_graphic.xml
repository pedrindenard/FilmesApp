    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graphic"
    app:startDestination="@+id/navigation_popular">

    <fragment
        android:id="@+id/navigation_popular"
        android:name="com.app.moviester.ui.popular.PopularFragment"
        android:label="@string/title_popular"
        tools:layout="@layout/fragment_popular">
    </fragment>

    <fragment
        android:id="@+id/navigation_top_rate"
        android:name="com.app.moviester.ui.top.TopRateFragment"
        android:label="@string/title_topRate"
        tools:layout="@layout/fragment_top_rate">
    </fragment>

    <fragment
        android:id="@+id/navigation_upComing"
        android:name="com.app.moviester.ui.upcoming.UpComingFragment"
        android:label="@string/title_upCominig"
